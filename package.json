{
  "name": "api",
  "namespace": "@hulla",
  "description": "The next-gen API/RPC manager üöÄ",
  "author": {
    "name": "Samuel Hulla",
    "email": "hulla@hulla.dev",
    "url": "https://hulla.dev"
  },
  "maintainers": [
    "Samuel Hulla <hulla@hulla.dev>"
  ],
  "homepage": "https://hulla.dev/projects/api",
  "repository": {
    "type": "git",
    "url": "https://github.com/hulladev/api.git",
    "directory": "packages/api"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean && rm -rf pnpm-lock.yaml node_modules",
    "bundle": "turbo run lint format test build && pnpm changeset && pnpm changeset version",
    "release": "turbo run lint format test build && pnpm changeset publish",
    "lint": "turbo lint",
    "format": "turbo format",
    "test": "turbo test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/bun": "^1.0.11",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "bunchee": "latest",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-emoji": "^1.3.2-canary.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "expect-type": "^0.19.0",
    "husky": "^9.0.11",
    "msw": "^2.2.14",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "publint": "^0.2.7",
    "turbo": "latest",
    "typescript": "^5.0.0",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9.1.2",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipScope": true,
      "scopes": [],
      "types": [
        {
          "emoji": "‚úÖ",
          "code": ":white_check_mark: feat:",
          "description": "a new functionality",
          "name": "feat"
        },
        {
          "emoji": "üêû",
          "code": ":lady_beetle: fix:",
          "description": "a bug fix",
          "name": "fix"
        },
        {
          "emoji": "üîß",
          "code": ":wrench: update:",
          "description": "a code change that neither fixes a bug nor adds a feature",
          "name": "update"
        },
        {
          "emoji": "üìö",
          "code": ":books: docs:",
          "description": "documentations",
          "name": "docs"
        },
        {
